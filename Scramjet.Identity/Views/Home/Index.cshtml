@using Microsoft.Extensions.Options
@using Scramjet.Identity.Models
@{
    ViewData["Title"] = "Scramjet.Identity Home";
}
@inject IOptions<StsConfig> OptionsStsConfig

@if (User.Identity.IsAuthenticated)
{
    <h1>Hi @User.Identity.Name</h1>
}
else
{
    <br />
}

<a href="@OptionsStsConfig.Value.AngularClientUrl">
    AngularClientUrl
</a>

<br />

<a href="@OptionsStsConfig.Value.AngularClientIdTokenOnlyUrl">
    AngularClientIdTokenOnlyUrl
</a>